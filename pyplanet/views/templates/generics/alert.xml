<frame>
  <quad pos="0 0 0" size="{{ sizes.box_width }} {{ sizes.box_height }}" bgcolor="FFFA" halign="center" valign="center" style="Bgs1" substyle="NavButtonBlink"/>
  <quad pos="{{ sizes.icon_left }} {{ sizes.icon_top }} 0" size="10 10" bgcolor="FFFA" style="{{ icon_style }}" substyle="{{ icon_substyle }}"/>
  <label pos="0 {{ sizes.title_top }} 0" z-index="5" size="{{ sizes.box_width }} 7" text="{{ title }}" textsize="5" textcolor="FFFFFFA" halign="center"/>
  <quad pos="{{ sizes.bar_left }} {{ sizes.bar_top }} 0" size="{{ sizes.box_width }} 1" bgcolor="FFFA" style="Bgs1" substyle="ProgressBarSmall"/>
  <label pos="{{ sizes.message_left }} {{ sizes.message_top }} 0" z-index="5" size="{{ sizes.message_width }} {{ sizes.message_height }}" autonewline="1" text="{{ message }}"/>
  <quad pos="0 {{ sizes.buttons_top }} 0" size="44 9" bgcolor="FFFA" halign="center" style="Bgs1" substyle="BgCard" action="{{ action }}"/>
  <label pos="0 {{ sizes.buttons_labels_top }} 0" z-index="5" size="38 5" text="{{ button_text }}" halign="center"/>
</frame>
